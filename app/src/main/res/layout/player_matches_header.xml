<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="12dp"
    android:background="@color/surface_surface_1">
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="13dp"
        android:text="@string/playerMatchesHeaderButton1"
        android:textSize="12sp"
        android:textColor="@drawable/button_text_selector"
        android:background="@drawable/button_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPlayoffs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="13dp"
        android:text="@string/playerMatchesHeaderButton2"
        android:textSize="12sp"
        android:textColor="@drawable/button_text_selector"
        android:background="@drawable/button_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonRegular"
        app:layout_constraintBottom_toBottomOf="parent"/>

<ImageView
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:id="@+id/filter"
    android:layout_marginVertical="12dp"
    android:layout_marginEnd="12dp"
    android:src="@drawable/ic_assets_exportable_icons_filter"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:tint="@color/black" />
    

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/surface_surface_1"
    android:elevation="12dp">

    <TextView
        android:id="@+id/seasonsTitle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        style="@style/BodyMediumNLv1Left"
        android:text="@string/seasonsHeaderTitle"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/seasonsLinLayout"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/seasonsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/AssistiveNLv2Center"
            android:layout_weight="1"
            android:id="@+id/seasonOne"
            tools:ignore="Suspicious0dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/AssistiveNLv2Center"
            android:layout_weight="1"
            android:id="@+id/seasonTwo"
            tools:ignore="Suspicious0dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/AssistiveNLv2Center"
            android:layout_weight="1"
            android:id="@+id/seasonThree"
            tools:ignore="Suspicious0dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/AssistiveNLv2Center"
            android:layout_weight="1"
            android:id="@+id/seasonFour"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/statName"
        style="@style/DescriptionNLv1Center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="X" />

    <ProgressBar
        android:id="@+id/first_team_bar"
        style="@style/VerticalProgressBar"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:progress="50"
        android:progressBackgroundTint="@color/surface_surface_0"
        android:progressTint="@color/team_hawks_primary_50pct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statName" />

    <TextView
        android:id="@+id/first_team_value"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="@color/neutrals_n_lv_1"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/first_team_bar"
        app:layout_constraintStart_toStartOf="@id/first_team_bar"
        app:layout_constraintTop_toBottomOf="@id/first_team_bar"
        tools:text="BR" />

    <ProgressBar
        android:id="@+id/second_team_bar"
        style="@style/VerticalProgressBar"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:progress="50"
        android:progressBackgroundTint="@color/surface_surface_0"
        android:progressTint="@color/team_celtics_primary_50pct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/first_team_bar"
        app:layout_constraintTop_toBottomOf="@id/statName" />

    <TextView
        android:id="@+id/second_team_value"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="@color/neutrals_n_lv_1"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/second_team_bar"
        app:layout_constraintStart_toStartOf="@id/second_team_bar"
        app:layout_constraintTop_toBottomOf="@id/second_team_bar"
        tools:text="BR" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/neutrals_n_lv_3"
        app:layout_constraintBottom_toBottomOf="@id/first_team_value"
        app:layout_constraintEnd_toStartOf="@id/second_team_value"
        app:layout_constraintStart_toEndOf="@id/first_team_value"
        app:layout_constraintTop_toTopOf="@id/first_team_value" />

</androidx.constraintlayout.widget.ConstraintLayout>